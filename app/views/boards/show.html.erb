<h1><%= @the_board.name %></h1>

<hr>

<h2>Add a new post</h2>

<form action="/insert_post" method="post">
  <div>
    <label for="title_box">Title</label>
    <input id="title_box" name="query_title" type="text">
  </div>

  <div>
    <label for="body_box">Body</label>
    <textarea id="body_box" name="query_body" rows="3"></textarea>
  </div>

  <div>
    <label for="expires_box">Expires on</label>
    <input id="expires_box" name="query_expires_on" type="date">
  </div>
  
    <input id="board_id" name="query_board_id" type="hidden" value="<%= @the_board.id %>">

  <button>
    Add post
  </button>
</form>

<hr>

<h2>Active posts</h2>

<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Body
    </th>

    <th>
      Posted on
    </th>

    <th>
      Expires on
    </th>
  </tr>

  <% @list_of_posts.each do |a_post| %>
    <tr>
      <td>
        <%= a_post.title %>
      </td>

      <td>
        <%= a_post.body %>
      </td>

      <td>
        <%= a_post.created_at.strftime("%b %e, %Y") %>
      </td>
      <td>
        <%= a_post.updated_at.strftime("%b %e, %Y") %>
      </td>
    </tr>
  <% end %>
</table>
